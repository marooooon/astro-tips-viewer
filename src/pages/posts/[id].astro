---
import type { Post } from '../../types/post';
import '../../styles/global.css';

// JSON„Éá„Éº„Çø„ÇíË™≠„ÅøËæº„Åø
import postsData from '../../data/posts.json';

// ÈùôÁöÑ„Éë„Çπ„ÇíÁîüÊàê
export function getStaticPaths() {
  return (postsData as Post[]).map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

// ÁèæÂú®„ÅÆË®ò‰∫ã„ÇíÂèñÂæó
const { post } = Astro.props as { post?: Post };

if (!post) {
  return Astro.redirect('/404');
}
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{post.title} - Tips Viewer</title>
    <meta name="description" content={post.description} />
  </head>
  <body>
    <div class="container">
      <header class="header">
        <h1>
          <a href="/">üìö Tips Viewer</a>
        </h1>
      </header>

      <main>
        <article class="post-detail">
          <div class="post-meta">
            <time datetime={post.date}>{post.date}</time>
            <div class="post-tags">
              {post.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
          
          <h1 class="post-title">{post.title}</h1>
          
          <div class="post-description-box">
            <p>{post.description}</p>
          </div>

          <div class="post-body">
            <p>{post.body}</p>
          </div>

          <div class="post-actions">
            <a href="/" class="back-button">‚Üê ‰∏ÄË¶ß„Å´Êàª„Çã</a>
          </div>
        </article>
      </main>

      <footer class="footer">
        <p>&copy; 2026 Tips Viewer - Built with Astro & TypeScript</p>
      </footer>
    </div>
  </body>
</html>

<style>
  .post-detail {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e0e0e0;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .post-meta time {
    color: #666;
    font-size: 0.95rem;
  }

  .post-title {
    font-size: 2rem;
    color: #333;
    margin: 1rem 0;
    line-height: 1.3;
  }

  .post-description-box {
    background: #f0f9ff;
    border-left: 4px solid #2563eb;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
  }

  .post-description-box p {
    margin: 0;
    color: #1e40af;
    font-size: 1.05rem;
  }

  .post-body {
    line-height: 1.8;
    color: #444;
    font-size: 1.05rem;
    margin: 2rem 0;
  }

  .post-body p {
    margin: 1rem 0;
  }

  .post-actions {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e0e0e0;
  }

  .back-button {
    display: inline-block;
    background: #2563eb;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    transition: background 0.2s;
  }

  .back-button:hover {
    background: #1d4ed8;
  }

  @media (max-width: 768px) {
    .post-detail {
      padding: 1.5rem;
    }

    .post-title {
      font-size: 1.5rem;
    }
  }
</style>
